{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug config",
            "program": "C:\\dsc\\dsc\\target\\debug\\dsc.exe",
            "args": [
                "config",
                "set",
                "-w",
                "-d",
                "$schema: https://raw.githubusercontent.com/PowerShell/DSC/main/schemas/2023/10/config/document.json\nresources:\n- name: Registry\n     type: Microsoft.Windows/Registry\n     properties:\n          keyPath: 'HKCU\\1\\2'"
            ],
            "cwd": "C:\\dsc"
        },
        {
            "name": "(macOS) Attach",
            "type": "lldb",
            "request": "attach",
            "pid": "${command:pickMyProcess}",
        },
        {
            "name": "(Windows) Attach",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}",
        },
        {
            "name": "Debug sshdconfig",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/sshdconfig/target/debug/sshdconfig.exe",
            "args": ["get"],
            "cwd": "${workspaceFolder}"
        }
    ]
}
