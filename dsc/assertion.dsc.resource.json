{
  "manifestVersion": "1.0",
  "type": "DSC/AssertionGroup",
  "version": "0.1.0",
  "description": "`test` will be invoked for all resources in the supplied configuration.",
  "get": {
    "executable": "dsc",
    "args": [
      "config",
      "test"
    ],
    "input": "stdin"
  },
  "set": {
    "executable": "dsc",
    "args": [
      "config",
      "test"
    ],
    "input": "stdin",
    "preTest": true,
    "return": "state"
  },
  "test": {
    "executable": "dsc",
    "args": [
      "config",
      "test"
    ],
    "input": "stdin",
    "return": "state"
  },
  "exitCodes": {
    "0": "Success",
    "1": "Invalid argument",
    "2": "Resource error",
    "3": "JSON Serialization error",
    "4": "Invalid input format",
    "5": "Resource instance failed schema validation",
    "6": "Command cancelled"
  },
  "schema": {
    "command": {
      "executable": "dsc",
      "args": [
        "schema",
        "--type",
        "configuration"
      ]
    }
  },
  "validate": {
    "executable": "dsc",
    "args": [
      "config",
      "validate"
    ]
  }
}
